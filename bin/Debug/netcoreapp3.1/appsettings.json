{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "WrapperHostName": "https://localhost:44393",
  "EmailNotifContent": "Dear All, <br><br>LME Response Code 99 with error code: <b>{errorCode}</b><br><br>Error message: <br>{errorMessage}<br><br>Thank you. <br><br><b><small>*this email generated by LME system</small></b>",
  "DBConfig": {
    "Default": {
      "Product": "POSTGRES",
      "Host": "localhost",
      "Port": 5432,
      "Database": "gateway",
      "Username": "postgres",
      "Password": "root",
      "SearchPath": "clqc"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Verbose",
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console"
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "Logs/backoffice.txt",
                "rollOnFileSizeLimit": true,
                "fileSizeLimitBytes": "100000"
              }
            }
          ]
        }
      }
    ]
  }
}
